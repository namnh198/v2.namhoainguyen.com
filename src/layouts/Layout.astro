---
import '~/assets/styles/tailwind.css';

import type { Metadata as MetadataType } from '../types';
import Metadata from '~/components/Metadata.astro';
import Footer from '~/components/Footer.astro';

interface Props {
  metadata: MetadataType;
  customBody?: Array<string> | string;
}

const { metadata, customBody = '' } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <Metadata {...metadata} />
  </head>
  <body class:list={['text-base bg-white text-neutral-900 dark:bg-neutral-900/95 dark:text-neutral-200', [customBody]]}>
    <slot />
    <slot name='footer'>
      <Footer />
    </slot>
  </body>
</html>
