---
type BadgeProps = {
  title: string;
  color: string;
  permalink?: string;
}

interface Props {
  badges: BadgeProps[];
}
const {badges} = Astro.props;
const variant = (color) => {
  switch (color) {
    case 'red':
      return 'text-red-700 bg-red-50 ring-red-600/20 hover:bg-red-600 hover:text-red-100';
    case 'orange':
      return 'text-orange-700 bg-orange-50 ring-orange-600/20 hover:bg-orange-600 hover:text-orange-100';
    case 'yellow':
      return 'text-yellow-700 bg-yellow-50 ring-yellow-600/20 hover:bg-yellow-600 hover:text-yellow-100';
  }
}
---
<div class="flex flex-wrap items-center gap-1.5">
  {badges.map((badge) => <a href={badge.permalink} class:list={['transition-colors duration-300 inline-flex px-2.5 py-1 font-medium text-xs rounded-full relative ring-1 ring-inset', variant(badge.color)]}>{badge.title}</a>)}
</div>

