---
import { Icon } from "astro-icon/components";
import { footerSocial } from '../navigation';
---
<div class="border-t border-gray-100 dark:border-neutral-600 py-6 sm:py-10">
  <div class="mx-auto flex max-w-7xl flex-col items-center justify-center gap-8 px-6 sm:flex-row lg:px-8">
    <p class="transition-colors text-neutral-900 dark:text-gray-200 text-sm sm:text-base">
      <a href="/" class="hover:text-indigo-600 dark:hover:text-indigo-700">Nam Â© 2023</a>
      Built with 
      <a class="italic hover:text-indigo-600 dark:hover:text-indigo-700" target="_blank" rel="noreferrer nofollow" href="https://astro.build">Astro</a>, 
      hosted on <a class="italic hover:text-indigo-600 dark:hover:text-indigo-700" href="https://www.netlify.com/">Netlify</a>
    </p>
    <div class="hidden sm:block sm:h-7 sm:w-px sm:flex-none sm:bg-gray-200 dark:bg-neutral-600"></div>
    <nav class="flex gap-x-2">
      {footerSocial.map(social => <a href={social.permalink} class="inline-flex items-center">
        <span class="sr-only">{social.name}</span>
        <Icon name={social.icon} size={28} class="hover:text-indigo-600 dark:hover:text-indigo-700"/>
      </a>)}
    </nav>
  </div>
</div>
