---
import type { Category } from '~/types';
import { Image } from 'astro:assets';
interface Props {
  topic: Category;
}
const { topic } = Astro.props;
---

<a
  class="nc-CardCategory2 relative flex flex-col items-center justify-center text-center px-3 py-5 sm:p-6 bg-white dark:bg-neutral-900 rounded-3xl transition-colors"
  href={topic.permalink}
>
  <div class="relative flex-shrink-0 w-20 h-20 rounded-full shadow-lg overflow-hidden z-0">
    <Image src={topic.image} alt={topic.title} />
  </div>
  <div class="mt-3">
    <h2 class="text-base font-semibold">{topic.title}</h2>
    <span class="block mt-1 text-sm text-neutral-500 dark:text-neutral-400">{topic.posts.length} Articles</span>
  </div>
</a>
