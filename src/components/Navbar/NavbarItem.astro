---
import type { NavbarItemType } from '~/navigation';

interface Props {
  menu: NavbarItemType;
  activeMenu: string
}

const {menu, activeMenu} = Astro.props;
---

<a href={menu.permalink} class:list={[
  'inline-flex items-center text-sm font-medium rounded-full px-3 lg:px-4 py-2 lg:py-2.5',
  {
    'text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800': activeMenu !== menu.name,
    'bg-indigo-700 dark:bg-indigo-600 hover:bg-indigo-600 dark:hover:bg-indigo-700 text-indigo-50': activeMenu === menu.name
  }
]} title={menu.name}>{ menu.name }</a>
